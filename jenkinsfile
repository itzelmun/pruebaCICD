pipeline {

  environment {
    dockerimagename = "itzelmunguia/pruebacicd"
    dockerCredential = 'dockerpruebacicd'
    dockerImage = ''
  }

  agent any

  stages {

    stage('Checkout Source') {
      steps {
	git credentialsId: 'github_credential', url: 'https://github.com/itzelmun/pruebaCICD.git'	
      }
    }

    stage('Build image') {
      steps {
        script {
          dockerImage = docker.build dockerimagename
        }
      }
    }

    stage('Pushing Image') {
      environment {
               registryCredential = 'dockerpruebacicd'
           }

      steps{
        script {
          docker.withRegistry( 'https://registry.hub.docker.com', registryCredential ) {
            dockerImage.push("latest")
          }
        }
      }
    }

    stage('Deploying App to Kubernetes') {
      steps {
	script {
           kubernetesDeploy(configs: "deployment-service-simplesaml.yaml", kubeconfigId: "kuberkey")
          }
         }
        }

   stage('Restarting POD') {
      steps {
          sshagent(['sshsanchez']) {
           sh "scp -o StrictHostKeyChecking=no deployment-service-simplesaml.yaml sanchez@148.213.1.131:/home/sanchez"    
        script {

            try{
                sh 'ssh sanchez@148.213.1.131 microk8s.kubectl rollout restart deployment pruebacicd --kubeconfig=/home/sanchez/.kube/config'
              }catch(error){
          }
	}
      }
    }
  }
 }
}
