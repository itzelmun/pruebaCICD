pipeline {

  environment {
    dockerimagename = "itzelmunguia/pruebacicd"
    dockerCredential = 'docker-hub-itzelmun'
    dockerImage = ''
  }

  agent any

  stages {

    stage('Checkout Source') {
      steps {
	git credentialsId: 'github_credential', url: 'https://github.com/itzelmun/pruebaCICD.git'	
      }
    }

    stage('Build image') {
      steps {
        script {
          dockerImage = docker.build dockerimagename
        }
      }
    }

    stage('Pushing Image') {
      environment {
               registryCredential = 'dockerhublogin3'
           }
      steps{
        script {
          docker.withRegistry( 'https://registry.hub.docker.com', registryCredential ) {
            dockerImage.push("latest")
          }
        }
      }
    }

    stage('Deploying App to Kubernetes') {
      steps {
	  sshagent(['kubernetesssh']) {
          sh "scp -o StrictHostKeyChecking=no deployment-service-simplesaml.yaml sanchez@148.213.5.79:/home/sanchez"
}
        script {
	    try{
                 kubernetesDeploy(configs: "deployment-service-simplesaml.yaml", kubeconfigId: "kubersanchez")
                 sh "ssh sanchez@148.213.5.79 kubectl apply -f ."
              }catch(error){
               sh "ssh sanchez@148.213.5.79 kubectl create -f ."
        }
      }
    }
  }

}
